{
  "name": "atom",
  "version": "0.1.2",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sinfores-Labs/atom.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build --mode electron",
    "serve": "vite preview",
    "serve:electron": "vite build --mode electron && electron .",
    "gh:deploy": "vite build && gh-pages -d dist",
    "forge:start": "vite build --mode release && electron-forge start",
    "forge:package": "vite build --mode release && electron-forge package",
    "forge:make": "vite build --mode release && electron-forge make"
  },
  "dependencies": {
    "@headlessui/vue": "^1.4.1",
    "@heroicons/vue": "^1.0.4",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/line-clamp": "^0.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "file-saver": "^2.0.5",
    "update-electron-app": "^2.0.1",
    "vue": "^3.2.16",
    "vue3-dropzone": "^0.0.7",
    "vue3-markdown-it": "^1.0.9",
    "vue3-popper": "^1.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@vitejs/plugin-vue": "^1.9.3",
    "autoprefixer": "^10.3.7",
    "electron": "^15.3.0",
    "gh-pages": "^3.2.3",
    "postcss": "^8.3.9",
    "tailwindcss": "^2.2.17",
    "vite": "^2.6.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "atom"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
